---
import type { Skill } from '@recivi/schema'

import IconName from '@/components/IconName.astro'

interface Props {
  skill: Skill
}
const { skill } = Astro.props

const formalSkill =
  typeof skill === 'string'
    ? {
        id: null,
        name: skill,
        subSkills: [],
      }
    : skill
---

<span>
  <span>
    {
      formalSkill.id ? (
        <IconName
          id={formalSkill.id}
          name={formalSkill.name}
        />
      ) : (
        formalSkill.name
      )
    }
  </span>
  {
    formalSkill.subSkills?.length ? (
      <span class="text-overlay1">
        :
        {formalSkill.subSkills.map((subskill) => (
          <span class="after:text-overlay1 after:content-['Â·'] last:after:content-none">
            <Astro.self skill={subskill} />
          </span>
        ))}
      </span>
    ) : undefined
  }
</span>
