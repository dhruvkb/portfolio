interface Props {
  categories?: string[]
}
let { categories = await getCategories() } = Astro.props
---

<ul class="inline">
  {
    categories.length ? (
      categories.map((category) => (
        <li class="me-1 inline-block after:text-subtle after:content-['Â·'] last:after:content-none">
