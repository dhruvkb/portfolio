---
import Icon from '@/components/Icon.astro'

interface Props {
  nature: 'living_doc' | 'assumed_audience'
}
const { nature } = Astro.props

const isLiving = nature === 'living_doc'
---

<p
  class="relative my-4 flex items-center gap-2 border border border-l-0 bg-surface0 p-2 pl-2.5 before:absolute before:-inset-y-px before:left-0 before:w-0.5"
  class:list={isLiving ? 'before:bg-green' : 'before:bg-blue'}>
  <span class:list={isLiving ? 'text-green' : 'text-blue'}>
    <Icon
      source="lucide"
      name={isLiving ? 'leaf' : 'user-check'}
    />
  </span>
  <span>
    <slot>
      This post is a living document in my digital garden. It will continue to
      improve over time.
    </slot>
  </span>
</p>
